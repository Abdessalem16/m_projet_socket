package client;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.PrintWriter;
import java.net.Socket;

public class client {
    public static void main(String[] args) {
        try {
            // Se connecter au serveur sur le port 12345
            Socket socket = new Socket("localhost", 12345);
            System.out.println("Connecté au serveur.");

            // Créer des flux de lecture/écriture pour la communication avec le serveur
            BufferedReader reader = new BufferedReader(new InputStreamReader(socket.getInputStream()));
            PrintWriter writer = new PrintWriter(socket.getOutputStream(), true);

            // Authentification
            System.out.print("Veuillez entrer votre nom d'utilisateur : ");
            String username = reader.readLine();
            System.out.println("" + username);

            // Lire et afficher les messages du serveur
            new Thread(() -> {
                try {
                	System.out.print("Entrez un message (ou 'exit' pour quitter) : ");
                    String serverResponse;
                    while ((serverResponse = reader.readLine()) != null) {
                        System.out.println(serverResponse);
                    }
                } catch (IOException e) {
                    e.printStackTrace();
                }
            }).start();

            // Envoyer des messages au serveur depuis le clavier
            BufferedReader consoleReader = new BufferedReader(new InputStreamReader(System.in));
            String userInput;
            while ((userInput = consoleReader.readLine()) != null) {
                writer.println(userInput);
                if (userInput.equals("exit")) {
                    break;
                }
            }

            // Fermer la connexion
            socket.close();
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
